<div class="typewriter md-4">
    <div class="typewriter">
    <!--<h1><%= image_tag "repair-tools.png", height: "30", width: "30" %><u><%= @tool.name %></u>Rent Your Tools!And Earn MONEY!</h1>
  </div>-->

    
  </div class= "container mb-5">  
      <br>
      <br>
      
      <%= simple_form_for(tool) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name,placeholder: "Tournevis" %>
          <%= f.input :price, placeholder: "Rs 1000" %>
          <%= f.input :quantity,placeholder: "1" %>
          <%= f.input :brand,placeholder: "Mikita"%>
          <%= f.input :description,placeholder: "Tournevis Americain pointe etoile "%>
          <%= f.input :availability %>
        </div>

        <div class="form-actions">
          <%= link_to "Back to tools", tools_path, class: "btn btn-danger btn-block" %> 
          <%= f.button :submit, class: "btn btn-danger btn-block" %>
        </div>
      <% end %>
  </div>
</div>
